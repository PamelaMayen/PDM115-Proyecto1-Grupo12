<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_detalle_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8000000"
    android:orientation="vertical"
    android:paddingLeft="64dp"
    android:paddingTop="16dp"
    android:paddingRight="64dp"
    android:paddingBottom="16dp">


    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:gravity="center"
        android:text="Reservacion del libro seleccionado"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/informacion0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informacion del libro"
        android:textColor="#FFFCFC"
        android:textStyle="italic" />


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:background="#009688"
        android:onClick="@string/button2"
        android:text="RESERVAR CICLO COMPLETO"
        app:backgroundTint="#009688" />


    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:background="#009688"
        android:onClick="ReservarActividad"
        android:text="RESERVAR PARA ACTIVIDAD"
        app:backgroundTint="#009688" />


    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:onClick="@string/button1"
        android:text="@string/button1"
        app:backgroundTint="#009688" />


</LinearLayout>